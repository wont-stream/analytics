{
  "compilerOptions": {
    "rootDir": "src",
    "module": "ES6",
    "target": "es2017",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests"]
}
